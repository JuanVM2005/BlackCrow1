      "id": "firstName",
      "label": "Nombre",
      "placeholder": "Tu nombre",
      "type": "text",
      "required": true,
      "width": "half"
    },
    {
      "id": "lastName",
      "label": "Apellido",
      "placeholder": "Tu apellido",
      "type": "text",
      "required": true,
      "width": "half"
    },
    {
      "id": "email",
      "label": "Correo electrónico",
      "placeholder": "tu@correo.com",
