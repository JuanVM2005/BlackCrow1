      "required": true,
      "width": "full"
    },
    {
      "id": "message",
      "label": "Mensaje",
      "placeholder": "Cuéntanos qué necesitas…",
      "type": "textarea",
      "rows": 6,
      "required": true,
      "width": "full"
    },
    {
      "id": "newsletter",
      "label": "Recibir boletín mensual de Black Crow",
      "type": "checkbox",
      "required": false,
      "width": "full"
    },
    {
      "id": "acceptPrivacy",
      "label": "Acepto la política de privacidad.",
      "type": "checkbox",
      "required": true,
      "width": "full"
    }
